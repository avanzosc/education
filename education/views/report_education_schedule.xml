<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template t-name="report_education_schedule_document">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <div class="page">
                    <h2>
                        <span t-field="o.display_name"/>
                    </h2>
                    <table class="table table-sm o_main_table" name="education_schedule_student_list">
                        <thead>
                            <tr>
                                <th name="student_number_header" class="text-center"><span>#</span></th>
                                <th name="student_surname_header" class="text-left"><span>Surnames</span></th>
                                <th name="student_name_header" class="text-left"><span>Firstname</span></th>
                                <th name="student_birthdate_header" class="text-left"><span>Birthdate</span></th>
                                <th name="student_vat_header" class="text-left"><span>VAT Number</span></th>
                                <th name="student_email_header" class="text-left"><span>Email</span></th>
                            </tr>
                        </thead>
                        <tbody class="student_list_tbody">
                            <t t-set="number" t-value="0"/>
                            <tr t-foreach="o.student_ids" t-as="student">
                                <t t-set="number" t-value="number+1"/>
                                <td class="text-center" name="student_number"><t t-esc="number"/></td>
                                <td name="student_surname" class="text-left"><span t-esc="student.lastname and student.lastname.upper()"/> <span t-esc="student.lastname2 and student.lastname2.upper()"/> </td>
                                <td name="student_name" class="text-left"><span t-esc="student.firstname and student.firstname.upper() or student.display_name"/></td>
                                <td name="student_birthdate" class="text-left"><span t-esc="student.birthdate_date"/></td>
                                <td name="student_vat" class="text-left"><span t-esc="student.vat"/></td>
                                <td name="student_email" class="text-left"><span t-esc="student.email"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </template>

        <template id="report_education_schedule">
            <t t-call="web.html_container">
                <t t-foreach="docs.sudo()" t-as="o">
                    <t t-set="lang" t-value="user.lang"/>
                    <t t-call="education.report_education_schedule_document" t-lang="lang"/>
                </t>
            </t>
        </template>

        <report id="education_schedule_list"
                model="education.schedule"
                string="Student List"
                report_type="qweb-pdf"
                name="education.report_education_schedule"
                file="education.report_education_schedule"
        />

    </data>
</odoo>
