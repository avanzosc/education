<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <menuitem id="issue_menuitem"
              name="Issues"
              parent="education.education_menuitem"
              sequence="1" />
    <menuitem id="issue_masters_menuitem"
              name="Masters"
              parent="issue_menuitem"
              sequence="50" />
    <record id="school_issue_type_master_view_tree" model="ir.ui.view">
        <field name="model">school.issue.type.master</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="affect_to" />
            </tree>
        </field>
    </record>
    <record id="school_issue_type_master_view_search" model="ir.ui.view">
        <field name="model">school.issue.type.master</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="affect_to" />
                <group expand="0" string="Group By">
                   <filter string="Affect to" name="group-affect-to" domain="[]" context="{'group_by':'affect_to'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="school_issue_type_master_view_form" model="ir.ui.view">
        <field name="model">school.issue.type.master</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group name="group1">
                        <group>
                            <field name="affect_to" required="1"/>
                        </group>
                        <group/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_school_issue_type_master">
        <field name="name">Issues types master</field>
        <field name="res_model">school.issue.type.master</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="school_issue_type_master_view_tree" />
    </record>
    <menuitem id="school_issue_type_master_menuitem"
              parent="issue_masters_menuitem"
              action="action_school_issue_type_master"
              sequence="1" />
</odoo>
