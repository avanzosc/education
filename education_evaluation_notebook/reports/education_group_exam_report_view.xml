<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="education_group_exam_report_view_tree" model="ir.ui.view">
        <field name="model">education.group.exam.report</field>
        <field name="arch" type="xml">
            <tree decoration-danger="exam_date and (exam_date &lt; current_date)">
                <field name="center_id" />
                <field name="course_id" />
                <field name="group_id" />
                <field name="subject_id" />
                <field name="subject_name" />
                <field name="teacher_id" />
                <field name="classroom_id" />
                <field name="academic_year_id" />
                <field name="exam_description" />
                <field name="exam_date" />
                <field name="exam_state" />
            </tree>
        </field>
    </record>

    <record id="education_group_exam_report_view_calendar" model="ir.ui.view">
        <field name="model">education.group.exam.report</field>
        <field name="arch" type="xml">
            <calendar string="Exams" date_start="exam_date" mode="month" color="group_id">
                <field name="exam_description"/>
                <field name="teacher_id"/>
                <field name="subject_id"/>
            </calendar>
        </field>
    </record>

    <record id="education_group_exam_report_view_search" model="ir.ui.view">
        <field name="model">education.group.exam.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="center_id" />
                <field name="course_id" />
                <field name="group_id" />
                <field name="subject_id" />
                <field name="teacher_id" />
                <field name="classroom_id" />
                <field name="academic_year_id" />
                <field name="exam_description" />
                <field name="exam_date" />
                <field name="exam_state" />
                <separator />
                <filter string="Current Academic Year" name="current_academic_year"
                        domain="[('academic_year_id.current','=',True)]" />
                <separator />
                <filter string="Late Exam" name="exam_overdue"
                        domain="[('exam_date', '&lt;', context_today().strftime('%Y-%m-%d'))]"
                        help="Show all records which has next action date is before today"/>
                <filter string="Today Exam" name="exam_today"
                        domain="[('exam_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Future Exam" name="exam_upcoming_all"
                        domain="[('exam_date', '&gt;', context_today().strftime('%Y-%m-%d'))]"/>
                <group expand="1" string="Group By">
                    <filter string="Education Center" name="education_center"
                            context="{'group_by':'center_id'}"/>
                    <filter string="Education Course" name="education_course"
                            context="{'group_by':'course_id'}"/>
                    <filter string="Education Group" name="education_group"
                            context="{'group_by':'group_id'}"/>
                    <filter string="Education Subject" name="education_subject"
                            context="{'group_by':'subject_id'}"/>
                    <filter string="Teacher" name="teacher"
                            context="{'group_by':'teacher_id'}"/>
                    <filter string="Classroom" name="classroom"
                            context="{'group_by':'classroom_id'}"/>
                    <filter string="Academic year" name="academic_year"
                            context="{'group_by':'academic_year_id'}"/>
                    <filter string="Exam" name="exam"
                            context="{'group_by':'exam_id'}" />
                    <filter string="Exam Date" name="exam_date"
                            context="{'group_by':'exam_date'}" />
                    <filter string="Exam State" name="exam_state"
                            context="{'group_by':'exam_state'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="action_education_group_exam_current_report" model="ir.actions.act_window">
        <field name="name">Exam List</field>
        <field name="res_model">education.group.exam.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,calendar</field>
        <field name="search_view_id"
               ref="education_group_exam_report_view_search"/>
        <field name="domain">[('academic_year_id.current','=',True)]</field>
    </record>

    <record id="action_education_group_exam_report" model="ir.actions.act_window">
        <field name="name">Exam List</field>
        <field name="res_model">education.group.exam.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,calendar</field>
        <field name="search_view_id"
               ref="education_group_exam_report_view_search"/>
        <field name="context">{'search_default_current_academic_year': True}</field>
    </record>
</odoo>
