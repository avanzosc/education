<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="upload_education_student_view_form"
            model="ir.ui.view">
        <field name="model">upload.education.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="file" />
                        <field name="center_id" options="{'no_create': True, 'no_open': True}" />
                        <field name="academic_year_id" options="{'no_create': True, 'no_open': True}" />
                    </group>
                    <footer>
                        <button name="button_upload" string="Upload"
                                type="object" class="oe_highlight" />
                        or
                        <button special="cancel" string="Cancel" class="oe_link" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_upload_education_student" model="ir.actions.act_window">
        <field name="name">Upload Education Students / Group</field>
        <field name="res_model">upload.education.student</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
