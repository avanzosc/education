<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="calendar_school.hr_employee_view_form" />
        <field name="arch" type="xml">
            <button name="button_show_meetings" position="after">
               <button name="button_show_notebook_observations" type="object" icon="fa-bars">
                   <field name="count_notebook_observation" widget="statinfo" string="Notebook observations"/>
               </button>
            </button>
        </field>
    </record>
</odoo>
