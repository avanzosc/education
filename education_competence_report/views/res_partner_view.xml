<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_partner_view_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="education_evaluation_notebook.res_partner_view_form" />
        <field name="arch" type="xml">
            <button name="button_show_student_records" position="after">
                <button name="button_open_criteria_report" type="object"
                        class="oe_stat_button" icon="fa-book">
                    <span class="o_stat_text">Criteria Report</span>
                </button>
            </button>
        </field>
    </record>

    <record id="res_partner_minimal_view_form" model="ir.ui.view">
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="education_evaluation_notebook.res_partner_education_minimal_view_form" />
        <field name="arch" type="xml">
            <button name="button_show_student_records" position="after">
                <button name="button_open_criteria_report" type="object"
                        class="oe_stat_button" icon="fa-book">
                    <span class="o_stat_text">Criteria Report</span>
                </button>
            </button>
        </field>
    </record>
</odoo>
