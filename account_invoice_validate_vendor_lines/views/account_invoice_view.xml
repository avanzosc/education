<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_invoice_validate_tree" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="name">account.invoice.validate.tree</field>
        <field name="inherit_id" ref="account.invoice_supplier_tree" />
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="validate_OK" string="Validated OK"/>
            </field>
        </field>
    </record>
    <record id="account_invoice_validate_form" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="name">account.invoice.validate.form</field>
        <field name="inherit_id" ref="account.invoice_supplier_form" />
        <field name="arch" type="xml">
            <field name="date_due" position="after">
                <field name="validate_OK" widget="checkbox"/>
            </field>
        </field>
    </record>
</odoo>