<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_invoice_validate_filter" model="ir.ui.view">
        <field name="model">account.invoice</field>
        <field name="name">account.invoice.validate.filter</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter" />
        <field name="arch" type="xml">
            <filter name="late" position="after">
                <separator/>
                <filter string="Validated OK" name="check_value" domain="[('validate_OK','=', True)]" />
                <filter string="Validated NOK" name="check_value" domain="[('validate_OK','=', False)]" />
            </filter>
        </field>
    </record>
</odoo>