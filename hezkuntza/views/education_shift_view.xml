<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="education_shift_view_tree" model="ir.ui.view">
        <field name="model">education.shift</field>
        <field name="inherit_id"
               ref="education.education_shift_view_tree" />
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="create">false</attribute>
                <attribute name="delete">false</attribute>
                <attribute name="edit">false</attribute>
            </tree>
            <field name="description" position="after">
                <field name="description_eu"
                       groups="hezkuntza.education_basque" />
            </field>
        </field>
    </record>

    <record id="education_shift_view_search" model="ir.ui.view">
        <field name="model">education.shift</field>
        <field name="inherit_id"
               ref="education.education_shift_view_search" />
        <field name="arch" type="xml">
            <field name="description" position="after">
                <field name="description_eu" groups="hezkuntza.education_basque" />
            </field>
        </field>
    </record>

    <record id="education_shift_view_form" model="ir.ui.view">
        <field name="model">education.shift</field>
        <field name="inherit_id" ref="education.education_shift_view_form" />
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="create">false</attribute>
                <attribute name="delete">false</attribute>
                <attribute name="edit">false</attribute>
            </form>
            <field name="description" position="before">
                <label for="description" string="Spanish" />
            </field>
            <field name="description" position="after">
                <label for="description_eu" string="Basque"
                       groups="hezkuntza.education_basque" />
                <field name="description_eu" nolabel="1" colspan="4"
                       groups="hezkuntza.education_basque" />
            </field>
        </field>
    </record>
</odoo>
