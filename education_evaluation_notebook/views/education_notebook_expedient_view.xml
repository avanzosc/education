<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<!-- SEARCH EXPEDIENTE -->
	<record id="education_notebook_line_view_search"
		model="ir.ui.view">
		<field name="model">education.expedient</field>
		<field name="arch" type="xml">
			<search>
				<field name="exam_id" />
				<field name="date" />
				<field name="subject_id" />
				<field name="teacher_id" />
				<field name="kid_id" />
				<field name="numeric_mark" />
				<field name="mark_code" />
				<field name="behaviour_mark" />
				<group expand="1" string="Group By">
					<filter name="groupby_exam"
						context="{'group_by' : 'exam_id'}" string="Exam" />
					<filter name="groupby_subject"
						context="{'group_by' : 'subject_id'}" string="Subject" />
					<filter name="groupby_teacher"
						context="{'group_by' : 'teacher_id'}" string="Teacher" />
					<filter name="groupby_date" context="{'group_by' : 'date'}"
						string="Date" />
					<filter name="groupby_kid" context="{'group_by' : 'kid_id'}"
						string="Kid" />
				</group>
			</search>
		</field>
	</record>
	<!-- TREE EXPEDIENTE -->
	<record id="education_notebook_expedient_view_tree"
		model="ir.ui.view">
		<field name="model">education.expedient</field>
		<field name="arch" type="xml">
			<tree string="Expedient" editable="bottom">
				<field name="exam_id" />
				<field name="date" />
				<field name="subject_id" />
				<field name="teacher_id" />
				<field name="kid_id" />
				<field name="numeric_mark" />
				<field name="mark_code" />
				<field name="behaviour_mark" />
			</tree>
		</field>
	</record>
	<!-- KANBAN EXPEDIENTE -->
	<record id="partner_kanban_view" model="ir.ui.view">
		<field name="model">education.expedient</field>
		<field name="arch" type="xml">
			<kanban class="o_res_partner_kanban">
				<field name="exam_id" />
				<field name="date" />
				<field name="subject_id" />
				<field name="kid_id" />
				<field name="numeric_mark" />
				<templates>
					<t t-name="kanban-box">
						<div t-attf-class="oe_kanban_global_click">
							<div class="o_kanban_image">
								<img alt="Avatar"
									t-att-src="kanban_image('res.partners', 'image_medium',record.kid_id.raw_value)" />
							</div>
							<div class="oe_kanban_details">
								<strong class="o_kanban_record_title">
									<field name="exam_id" />
								</strong>
								<div t-if="record.date.value">
									<t t-esc="record.date.value" />
								</div>
								<div t-if="record.subject_id.value">
									<t t-esc="record.subject_id.value" />
								</div>
								<div t-if="record.numeric_mark.value">
									<t t-esc="record.numeric_mark.value" />
								</div>
							</div>
						</div>
					</t>
				</templates>
			</kanban>
		</field>
	</record>
</odoo>