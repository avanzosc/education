<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="download_education_resource_view_form" model="ir.ui.view">
        <field name="model">download.education.resource</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field invisible="1" name="state"/>
                    <field name="name" invisible="1"/>
                    <group states="open">
                        <field name="center_id" options="{'no_create': True, 'no_open': True}" />
                    </group>
                    <div states="get">
                        <h2>Export completed</h2>
                        <p>Here's the file: <field name="data" readonly="1" filename="name"/></p>
                    </div>
                    <footer states="open">
                        <button name="button_download_file" string="Export" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel" type="object" class="oe_link"/>
                    </footer>
                    <footer states="get">
                        <button special="cancel" string="Close" type="object"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_download_education_resource" model="ir.actions.act_window">
        <field name="name">Download Resources</field>
        <field name="res_model">download.education.resource</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
