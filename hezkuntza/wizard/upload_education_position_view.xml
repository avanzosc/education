<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="upload_education_position_view_form"
            model="ir.ui.view">
        <field name="model">upload.education.position</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="file_normal" />
                        <field name="file_other" />
                    </group>
                    <footer>
                        <button name="button_upload" string="Upload"
                                type="object" class="oe_highlight" />
                        or
                        <button special="cancel" string="Cancel" class="oe_link" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_upload_education_position" model="ir.actions.act_window">
        <field name="name">Upload Education Positions</field>
        <field name="res_model">upload.education.position</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
