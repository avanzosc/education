<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="education_course_view_tree" model="ir.ui.view">
        <field name="model">education.course</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" edit="false">
                <field name="education_code" />
                <field name="level_id" />
                <field name="plan_id" />
                <field name="field_id" />
                <field name="shift_id" />
                <field name="description" />
                <field name="description_eu"
                       groups="hezkuntza.education_basque" />
            </tree>
        </field>
    </record>

    <record id="education_course_view_search" model="ir.ui.view">
        <field name="model">education.course</field>
        <field name="arch" type="xml">
            <search>
                <field name="education_code" />
                <field name="description" />
                <field name="description_eu" groups="hezkuntza.education_basque" />
                <field name="level_id" />
                <field name="plan_id" />
                <field name="field_id" />
                <field name="shift_id" />
            </search>
        </field>
    </record>

    <record id="education_course_view_form" model="ir.ui.view">
        <field name="model">education.course</field>
        <field name="arch" type="xml">
            <form create="false" delete="false" edit="false">
                <sheet>
                    <div class="oe_title">
                        <label for="education_code" />
                        <h1>
                            <field name="education_code" />
                        </h1>
                    </div>
                    <group>
                        <field name="level_id" />
                        <field name="plan_id" />
                        <field name="field_id" />
                        <field name="shift_id" />
                    </group>
                    <group name="description" string="Description">
                        <label for="description" string="Spanish" />
                        <field name="description" nolabel="1" colspan="4"/>
                        <label for="description_eu" string="Basque"
                               groups="hezkuntza.education_basque" />
                        <field name="description_eu" nolabel="1" colspan="4"
                               groups="hezkuntza.education_basque" />
                    </group>
                    <group name="level_subject" string="Subjects by Level"
                           attrs="{'invisible': [('level_subject_ids', '=', [])]}">
                        <field name="level_subject_ids" nolabel="1">
                            <tree>
                                <field name="subject_id" />
                                <field name="level_id" />
                                <field name="plan_id" />
                            </tree>
                        </field>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_education_course">
        <field name="name">Courses</field>
        <field name="res_model">education.course</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="education_course_view_tree" />
    </record>

</odoo>
