<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_partner_record_view_added" model="ir.ui.view">
        <field name="model">education.group</field>
        <field name="inherit_id" ref="education.education_group_view_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object"
                        name="button_show_records" icon="fa-bookmark">
                    <field name="record_count" widget="statinfo"
                           string="Academic Records" />
                </button>
            </div>
        </field>
    </record>
</odoo>
