<odoo>
    <data>
        <record id="wiz_create_positive_issue_view_form" model="ir.ui.view">
            <field name="model">wiz.create.issue</field>
            <field name="arch" type="xml">
                <form string="Create positive issue">
                    <sheet>
                        <group name="group1" colspan="4">
                            <group>
                                <field name="education_schedule_id"  invisible="1"/>
                                <field name="school_id"  invisible="1"/>
                                <field name="school_issue_type_id" required="1"
                                     domain="[('issue_type_id.usual_issue','=',False),('school_id','=',school_id),('issue_type_id.gravity_scale_id.gravity_scale','in',('1','2'))]"/>
                                <field name="affect_to"  invisible="1"/>
                                <field name="student_id"  invisible="1"/>
                                <field name="reported_id" />
                                <field name="site_id" />
                                <field name="requires_imparting_group" invisible="1"/>
                                <field name="impartation_group_id"
                                    attrs="{'invisible': [('requires_imparting_group', '=', False)], 'required': [('requires_imparting_group', '=', True)]}"/>
                                
                            </group>
                            <group>
                                <field name="issue_date" />
                                <field name="claim_id" />
                                <field name="requires_justification" invisible="1"/>
                                <field name="proof_id"
                                    attrs="{'invisible': [('requires_justification', '=', False)], 'required': [('requires_justification', '=', True)]}"/>
                            </group>
                            <field name="name" colspan="4" string="Description"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Create issue" name="create_issue"
                            type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="wiz_create_negative_issue_view_form" model="ir.ui.view">
            <field name="model">wiz.create.issue</field>
            <field name="arch" type="xml">
                <form string="Create negative issue">
                    <sheet>
                        <group name="group1" colspan="4">
                            <group>
                                <field name="education_schedule_id"  invisible="1"/>
                                <field name="school_id"  invisible="1"/>
                                <field name="school_issue_type_id" required="1"
                                     domain="[('issue_type_id.usual_issue','=',False),('school_id','=',school_id),('issue_type_id.gravity_scale_id.gravity_scale','in',('0','-1','-2','-3','-4'))]"/>
                                <field name="affect_to"  invisible="1"/>
                                <field name="student_id"  invisible="1"/>
                                <field name="reported_id" />
                                <field name="site_id" />
                                <field name="requires_imparting_group" invisible="1"/>
                                <field name="impartation_group_id"
                                    attrs="{'invisible': [('requires_imparting_group', '=', False)], 'required': [('requires_imparting_group', '=', True)]}"/>
                                
                            </group>
                            <group>
                                <field name="issue_date" />
                                <field name="claim_id" />
                                <field name="requires_justification" invisible="1"/>
                                <field name="proof_id"
                                    attrs="{'invisible': [('requires_justification', '=', False)], 'required': [('requires_justification', '=', True)]}"/>
                            </group>
                            <field name="name" colspan="4" string="Description"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Create issue" name="create_issue"
                            type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="act_wiz_create_positive_issue" model="ir.actions.act_window">
            <field name="name">Create positive issue</field>
            <field name="res_model">wiz.create.issue</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="wiz_create_positive_issue_view_form"/>
            <field name="target">new</field>
        </record>
        <record id="act_wiz_create_negative_issue" model="ir.actions.act_window">
            <field name="name">Create negative issue</field>
            <field name="res_model">wiz.create.issue</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="wiz_create_negative_issue_view_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
