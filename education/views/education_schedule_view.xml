<!--                                       sum="Total Student Count"/>-->
<!--                                <field name="active" invisible="True" />-->
<!--                            </tree>-->
<!--                        </field>-->
<!--                        <field name="schedule_group_ids">-->
<!--                            <tree>-->
<!--                                <field name="group_id" />-->
<!--                                <field name="group_type_id" />-->
<!--                                <field name="group_student_count"-->
<!--                                       sum="group student count"/>-->
<!--                                <field name="session_number" />-->
<!--                                <field name="student_count"-->
<!--                                       sum="student count"/>-->
<!--                                <field name="group_alias" />-->
<!--                                <field name="parent_group_id" />-->
<!--                                <field name="parent_group_type_id" />-->
<!--                                <field name="parent_group_student_count"-->
<!--                                       sum="parent group student count"/>-->
